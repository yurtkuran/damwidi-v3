{{#if users}}

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th class="text-center">Verified</th>
                <th class="text-center">Member</th>
                <th class="text-center">Admin</th>
                <th class="text-center" colspan="2">Controls</th>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
                <tr>
                    <td>{{lastName}}, {{firstName}}</td>
                    <td>{{email}}</td>

                    <td class="text-center"><i class="{{iif isVerified "field" 'fas fa-check' 'fas fa-times'}}" ></i></td>
                    <td class="text-center"><i class="{{iif isMember   "field" 'fas fa-check' 'fas fa-times'}}" ></i></td>
                    <td class="text-center"><i class="{{iif isAdmin    "field" 'fas fa-check' 'fas fa-times'}}" ></i></td>

                    <td class="text-center"><a href="/users/edituser/{{id}}"><i class="far fa-edit"></i></td></a>
                    <td class="text-center"><i class="far fa-trash-alt"></i></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
    
{{else}}
    <h5>No Users</h5>
{{/if}}